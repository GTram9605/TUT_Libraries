<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="@dimen/cicular_corner_radius" />
         <stroke android:width="@dimen/button_stroke_width" android:color="@color/white"/>
         <gradient android:angle="-90" android:startColor="@color/logo_yellow"
             android:endColor="@color/logo_blue"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="@dimen/cicular_corner_radius"/>
         <stroke android:width="@dimen/button_stroke_width" android:color="@color/logo_red" />
         <solid android:color="@color/white"/>
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="@dimen/cicular_corner_radius" />
         <stroke android:width="@dimen/button_stroke_width" android:color="@color/white" />
		 <solid android:color="@color/logo_blue"/>
     </shape>
 </item>
</selector>